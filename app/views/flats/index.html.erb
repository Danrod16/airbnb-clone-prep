<p id="notice"><%= notice %></p>

<h1>Flats</h1>
<h2><%= current_user.id %> </h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flats.each do |flat| %>
      <tr>
        <td><%= flat.name %></td>
        <td><%= flat.description %></td>
        <td><%= flat.user_id %></td>
        <td><%= link_to 'Show', flat %></td>
        <% if policy(flat).edit? %>
        <td><%= link_to 'Edit', edit_flat_path(flat) %></td>
        <% end %>
        <%# if policy(flat).destroy? %>
          <td><%= link_to 'Destroy', flat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%# end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flat', new_flat_path %>
